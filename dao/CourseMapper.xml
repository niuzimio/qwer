<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.teacher.dao.CourseDao">
	<select id="getCourseByTid" resultType="Course">
		SELECT * FROM course WHERE tid=#{tid}
	</select>
	
	<select id="getCourseByCid" resultType="Course">
		SELECT * FROM course WHERE cid=#{cid}
	</select>
	
	<insert id="add" parameterType="Course">
		INSERT INTO course(cid,cname,cyear,cterm,tid,credit,ctime,classroom)VALUES(#{cid},#{cname},#{cyear},#{cterm},#{tid},#{credit},#{ctime},#{classroom})
	</insert>
	
	<delete id="delete" parameterType="Course">
		DELETE FROM course WHERE cid=#{cid}
	</delete>
	

	<update id="update" parameterType="Course">
		update course set cname=#{cname},cyear=#{cyear},cterm=#{cterm},tid=#{tid}, credit =#{credit},ctime=#{ctime}, classroom =#{classroom}where cid=#{cid}
	</update>
	

	<select id="queryAll" resultType="Course">
		select * from course
	</select>
	
</mapper>